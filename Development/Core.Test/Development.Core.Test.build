<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="nant-schema" name="Rubicon.Development.UnitTests">  

  <target name="build" description="perform a build">

    <csc  target="library" 
          output="${tests.builddir}/${project.output}.${project.extension}" 
          unsafe="true" 
          debug="${build.debug}"
          define="${build.csc.define}">
      <nowarn>
        <warning number="0612" if="${net20}" /> <!-- no obsolete warning for net2.0-->
      </nowarn> 
      <sources failonempty="true">
        <include name="*.cs" />
        <include name="UnitTesting/**/*.cs" />
        <exclude name="AssemblyInfoTemplate.cs" />
      </sources>
      <references failonempty="true">
        <include name="${tests.builddir}/Rubicon.Development.dll" />
        <include name="${tests.builddir}/nunit.framework.dll" />
        <include asis="true" name="System.dll"/>
      </references>
    </csc>
        
  </target>

</project>
