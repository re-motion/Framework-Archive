<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:tns="http://www.rubicon-it.com/commons/web/configuration" 
  elementFormDefault="qualified" targetNamespace="http://www.rubicon-it.com/commons/web/configuration" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="rubicon.web">
    <xs:complexType>
      <xs:sequence>
      
        <xs:element name="executionEngine">
          <xs:complexType>
            <xs:attribute name="functionTimeout" type="xs:int" default="20" />            
            <xs:attribute name="viewStateInSession" type="xs:boolean" default="true" />
          </xs:complexType>
        </xs:element>
               
        <xs:element name="waiConfiguration">
          <xs:complexType>
            <xs:attribute name="level" type="tns:WaiLevel" default="Undefined" />            
            <xs:attribute name="debug" type="xs:boolean" default="false" />
          </xs:complexType>
        </xs:element>

      </xs:sequence>
      
    </xs:complexType>
  </xs:element>
  <xs:simpleType name="WaiLevel">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Undefined" />
      <xs:enumeration value="A" />
      <xs:enumeration value="AA" />
      <xs:enumeration value="AAA" />
    </xs:restriction>
  </xs:simpleType>
  
</xs:schema>