<?xml version="1.0" encoding="UTF-8"?>
<mapping 
    application="UnitTests" 
    xmlns="http://www.rubicon-it.com/Data/DomainObjects/Mapping/1.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.rubicon-it.com/Data/DomainObjects/Mapping/1.0 ..\..\..\..\DomainObjects\Schemas\Mapping.xsd">
	<classes>
    <class id="Company">
      <type>Rubicon.Data.DomainObjects.UnitTests.TestDomain.Company, Rubicon.Data.DomainObjects.UnitTests</type>
      <entity name="Company" />
      <storageProviderID>TestDomain</storageProviderID>
      <properties>
        <property name="Name">
          <type>string</type>
          <column>Name</column>
          <maxLength>100</maxLength>
        </property>
      </properties>
    </class>

    <!-- Note: Supplier must be defined before Partner is defined! -->
    <class id="Supplier" baseClass="Partner">
			<type>Rubicon.Data.DomainObjects.UnitTests.TestDomain.Supplier, Rubicon.Data.DomainObjects.UnitTests</type>
			<entity name="Company" />
			<storageProviderID>TestDomain</storageProviderID>
			<properties>
        <!-- Note: Name is alread defined in base class Company, which is invalid. -->
				<property name="Name">
					<type>string</type>
          <!-- Note: Name property has different column name than same property in base class. -->
          <column>SupplierName</column> 
					<maxLength>100</maxLength>
				</property>
				<property name="SupplierQuality">
					<type>int32</type>
					<column>SupplierQuality</column>
				</property>
			</properties>
		</class>

    <!-- Note: Partner must be defined after Supplier is defined! -->
    <class id="Partner" baseClass="Company">
      <type>Rubicon.Data.DomainObjects.UnitTests.TestDomain.Partner, Rubicon.Data.DomainObjects.UnitTests</type>
      <entity name="Company" />
      <storageProviderID>TestDomain</storageProviderID>
      <properties />
    </class>
  </classes>
</mapping>
