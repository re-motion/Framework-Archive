<?xml version="1.0" encoding="UTF-8"?>
<queries 
    application="UnitTests" 
    xmlns="http://www.rubicon-it.com/Data/DomainObjects/Queries/1.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.rubicon-it.com/Data/DomainObjects/Queries/1.0 ..\queries.xsd">
    
	<query id="OrderQuery" type="collection">
	    <storageProviderID>TestDomain</storageProviderID>
	    <statement>
	    		select Order.* from Order 
	    			  inner join Customer 
	    			  where ... 
	    			  order by OrderNo asc 
	    </statement>
	    <collectionType>OrderCollection</collectionType>
	</query>
	<query id="CustomerQuery" type="collection">
	    <storageProviderID>TestDomain</storageProviderID>
	    <statement>select Customer.* from Customer where ... order by Name asc</statement>
	</query>
	<query id="OrderSumQuery" type="value">
	    <storageProviderID>TestDomain</storageProviderID>        
	    <statement>select sum(quantity) from Order where ...</statement>
	</query>
	
</queries>
