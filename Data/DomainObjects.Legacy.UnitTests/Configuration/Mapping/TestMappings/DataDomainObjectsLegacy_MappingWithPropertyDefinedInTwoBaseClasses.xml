<?xml version="1.0" encoding="UTF-8"?>
<mapping 
    application="UnitTests" 
    xmlns="http://www.re-motion.org/Data/DomainObjects/Mapping/1.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.re-motion.org/Data/DomainObjects/Mapping/1.0 ..\..\..\..\DomainObjects\Schemas\Mapping.xsd">
	<classes>

    <!-- Note: Supplier must be defined before Partner is defined! -->
    <class id="Supplier" baseClass="Partner">
      <type>Remotion.Data.DomainObjects.Legacy.UnitTests.TestDomain.Supplier, Remotion.Data.DomainObjects.Legacy.UnitTests</type>
      <entity name="Company" />
      <storageProviderID>TestDomain</storageProviderID>
      <properties>
      </properties>
    </class>

    <!-- Note: Partner must be defined after Supplier is defined! -->
    <class id="Partner" baseClass="Company">
      <type>Remotion.Data.DomainObjects.Legacy.UnitTests.TestDomain.Partner, Remotion.Data.DomainObjects.Legacy.UnitTests</type>
      <entity name="Company" />
      <storageProviderID>TestDomain</storageProviderID>
      <properties>
        <!-- Note: Base class Company defines the same property. -->
        <property name="Name">
          <type>string</type>
          <column>PartnerName</column>
          <maxLength>100</maxLength>
        </property>
      </properties>
    </class>

    <class id="Company">
      <type>Remotion.Data.DomainObjects.Legacy.UnitTests.TestDomain.Company, Remotion.Data.DomainObjects.Legacy.UnitTests</type>
      <entity name="Company" />
      <storageProviderID>TestDomain</storageProviderID>
      <properties>
        <property name="Name">
          <type>string</type>
          <column>CompanyName</column>
          <maxLength>100</maxLength>
        </property>
      </properties>
    </class>
  </classes>
</mapping>
