<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="nant-schema" name="Rubicon.Data.DomainObjects.CodeGenerator.UnitTests">
  
  <target name="build" description="perform a build">
    <csc  target="library"
          output="${build.test.outputdir}/${project.output}.${project.extension}"
          debug="${build.debug}"
          define="${build.csc.define}">
      <nowarn>
        <!-- obsolete warning -->
        <warning number="0618" />
      </nowarn> 
      <sources failonempty="true">
        <include name="**/*.cs"/>
        <exclude name="IntegrationTests/TestDomain/*.cs" />
        <exclude name="bin/**/*.cs" />
        <exclude name="AssemblyInfoTemplate.cs" />
      </sources>
      <references failonempty="true">
        <include asis="true" name="${build.test.outputdir}/nunit.framework.dll"/>
        <include asis="true" name="${build.test.outputdir}/Rubicon.Core.dll"/>
        <include asis="true" name="${build.test.outputdir}/Rubicon.Data.DomainObjects.dll"/>
        <include asis="true" name="${build.test.outputdir}/Rubicon.Data.DomainObjects.CodeGenerator.dll"/>
        <include asis="true" name="${build.test.outputdir}/Rubicon.Data.DomainObjects.ObjectBinding.dll"/>
        <include asis="true" name="System.dll"/>
        <include asis="true" name="System.Data.dll"/>
        <include asis="true" name="System.Xml.dll"/>
      </references>
    </csc>
    <copy todir="${build.test.outputdir}" flatten="true" overwrite="true">
      <fileset>
        <include name="*.xml" />
        <include name="Sql/SqlServer/TestData/*.sql" />
        <include name="IntegrationTests/TestDomain/*.cs" />
      </fileset>
    </copy>
  </target>
  
</project>
