<?xml version="1.0" encoding="UTF-8" ?>
<queries 
    application="Rubicon.SecurityManager" 
    xmlns="http://www.rubicon-it.com/Data/DomainObjects/Queries/1.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.rubicon-it.com/Data/DomainObjects/Queries/1.0 ..\DomainObjects\queries.xsd">

  <query id="Rubicon.SecurityManager.Domain.Metadata.SecurableClassDefinition.FindByName" type="collection">
    <storageProviderID>SecurityManagerDomain</storageProviderID>
    <statement>
      SELECT * FROM [SecurableClassDefinition] WHERE Name = @name;
    </statement>
  </query>

  <query id="Rubicon.SecurityManager.Domain.AccessControl.SecurityToken.FindAbstractRoles" type="collection">
    <storageProviderID>SecurityManagerDomain</storageProviderID>
    <statement>
      SELECT * FROM [EnumValueDefinition] WHERE ClassID='AbstractRoleDefinition';
    </statement>
  </query>
</queries>